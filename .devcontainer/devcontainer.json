{
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "features": {
    "ghcr.io/devcontainers-extra/features/http-server:1": {}
  },
  "appPort": "8080:80",
  "postAttachCommand": "http-server -c-1 /workspaces/display-modes/frontend",
  "postCreateCommand": "python -m pip install --upgrade pip && pip install -r requirements.txt",
  "customizations": {
    "vscode": {
      "extensions": [
        "CelianRiboulet.webvalidator",
        "DavidAnson.vscode-markdownlint",
        "eamodio.gitlens",
        "ms-python.python",
        "yandeu.five-server",
        "yzhang.markdown-all-in-one"
      ]
    }
  }
}